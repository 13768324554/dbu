#!/bin/bash
#TODO dialog is too wide and ugly
echo "$@"
zenity --window-icon=warning --question --title="Secure Delete" \
       --text="Are you sure you want to securely delete: $1 and any other selected files and folders? File data will be overwritten and cannot be recovered."

if [[ $? == 0 ]];
	then /usr/bin/srm -llrzv "$@"| \
    zenity --progress --pulsate --text="File deletion in progress..." \
    --title="Secure Delete" --auto-close
fi 
